# Dominio público que apunta a tu VPS (A/AAAA)
DOMAIN=grafana.tudominio.com

# Email para Let's Encrypt
LETSENCRYPT_EMAIL=tuemail@dominio.com

# Credenciales admin de Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CAMBIA_ESTO

# Retención en horas (14 días = 336h)
LOKI_RETENTION=336h

# Donde dejar backups en el host
BACKUP_DIR=/opt/observability-backups